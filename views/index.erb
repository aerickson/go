<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <form class="navbar-form" method="post" action="/links">
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
          <input type="url" class="form-control" name="url" placeholder="URL" value="https://" required>
        </div>
        <button type="submit" class="btn btn-default">Create</button>
      </form>
    </div>
    <div class="panel-body">
      <% if params[:not_found] %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong><%= params[:not_found] %></strong> is not a valid go link.
        Please add it if you think it should be.
      </div>
      <% end %>
      <table class="table table-hover table-bordered">
        <% @links.each do |link| %>
          <tr>
            <td><a href="/<%= link.name %>"><%= link.name %></a></td>
            <td><%= link.url %></td>
            <td><%= link.hits %></td>
          </tr>
        <% end %>
      </table>

      <% if @links.empty? %><p>No results</p><% end %>
    </div>
  </div>
</div>
